// 1. 1.2. Write a program to search a key element in the given array of elements using binary search.
#include <stdio.h>
int binary_search(int arr[], int n, int key) {
    int low = 0, high = n - 1, mid;

    while (low <= high) {
        mid = low + (high - low) / 2;

        if (arr[mid] == key) {
            return mid; 
        }
      
        else if (arr[mid] < key) {
            low = mid + 1;
        }
        
        else {
            high = mid - 1;
        }
    }
    return -1; 
}

